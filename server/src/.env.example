# Application settings
ENVIRONMENT=production  # development, staging, production
PORT=8080

# Authentication
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.your-domain.com/auth/google/callback
JWT_SECRET_KEY=your-secure-jwt-secret-key
JWT_EXPIRATION=10080  # 7 days in minutes

# Database (PostgreSQL - Supabase)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password
POSTGRES_HOST=db.your-project.supabase.co
POSTGRES_PORT=5432
POSTGRES_DB=postgres

# API Keys
EDAMAM_APP_ID=your-edamam-app-id
EDAMAM_APP_KEY=your-edamam-app-key
GEMINI_API_KEY=your-gemini-api-key

# Monitoring and logging
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
ALLOWED_ORIGINS=https://your-app-domain.com,https://www.your-app-domain.com

# Docker options
COMPOSE_PROJECT_NAME=cleem-api
